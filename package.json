{
  "name": "table-talk",
  "version": "0.1.0-alpha.2",
  "description": "A simple HTTP and socket server library that facilitates clear and error-free API design.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build-clean": "rm -rf ./dist && npm run build && git add ./dist",
    "docs": "typedoc --out ./docs --mode modules ./src",
    "docs-clean": "rm -rf ./docs && npm run docs && touch ./docs/.nojekyll && git add ./docs",
    "lint": "eslint src/**/*.ts",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\"}\" nyc mocha --recursive -r ts-node/register test/**/*.test.*",
    "coverage": "nyc report",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "release": "standard-version -a"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run test && npm run lint && npm run build-clean && npm run docs-clean && git add dist docs"
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "./src/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/socket.io": "^1.4.39",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "ts-mixer": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "husky": "^1.1.3",
    "mocha": "^5.2.0",
    "nyc": "^12.x.x",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^19.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tannerntannern/table-talk.git"
  },
  "keywords": [
    "typescript",
    "http",
    "socket",
    "server",
    "api"
  ],
  "author": "Tanner Nielsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tannerntannern/table-talk/issues"
  },
  "homepage": "https://github.com/tannerntannern/table-talk#readme"
}
