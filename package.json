{
  "name": "talk-to-me",
  "version": "0.0.1",
  "description": "A simple HTTP and socket server library that facilitates clear and error-free API design.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build-clean": "rm -rf ./dist && npm run build && git add ./dist",
    "watch": "npm run build -- -w",
    "lint": "eslint src/**/*.ts",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\"}\" nyc mocha --recursive -r ts-node/register test/**/*.test.*",
    "coverage": "nyc report",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "version": "npm run build-clean && auto-changelog"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "./src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/socket.io": "^1.4.38",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "ts-mixer": "^2.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "auto-changelog": "^1.8.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^19.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tannerntannern/talk-to-me.git"
  },
  "keywords": [
    "typescript",
    "http",
    "socket",
    "server",
    "talk-to-me"
  ],
  "author": "Tanner Nielsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tannerntannern/talk-to-me/issues"
  },
  "homepage": "https://github.com/tannerntannern/talk-to-me#readme"
}
